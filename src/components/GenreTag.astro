---
interface Props {
  genre: string;
  href?: string;
  size?: 'sm' | 'md';
}

const { genre, href, size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-3 py-1 text-sm',
};

const displayName = genre.replace(/-/g, '/').replace(/\b\w/g, l => l.toUpperCase());
---

{href ? (
  <a
    href={href}
    class:list={[
      'inline-flex items-center font-medium bg-label-100 text-label-700 rounded-full',
      'hover:bg-label-200 transition-colors',
      sizeClasses[size]
    ]}
  >
    {displayName}
  </a>
) : (
  <span
    class:list={[
      'inline-flex items-center font-medium bg-label-100 text-label-700 rounded-full',
      sizeClasses[size]
    ]}
  >
    {displayName}
  </span>
)}
