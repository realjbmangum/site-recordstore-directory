---
interface Props {
  feature: string;
  size?: 'sm' | 'md';
}

const { feature, size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-3 py-1 text-sm',
};

const displayName = feature.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
---

<span
  class:list={[
    'inline-flex items-center font-medium bg-ink-100 text-ink-600 rounded-full',
    sizeClasses[size]
  ]}
>
  {displayName}
</span>
