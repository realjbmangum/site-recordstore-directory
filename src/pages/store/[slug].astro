---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GenreTag from '../../components/GenreTag.astro';
import FeatureTag from '../../components/FeatureTag.astro';
import { getStoreBySlug, getStores } from '../../lib/supabase';
import { formatPhone, getGoogleMapsUrl, getDirectionsUrl, stateToSlug } from '../../lib/utils';

// Generate static paths for all stores
export async function getStaticPaths() {
  const stores = await getStores();
  return stores.map((store) => ({
    params: { slug: store.slug },
  }));
}

const { slug } = Astro.params;
const store = await getStoreBySlug(slug!);

if (!store) {
  return Astro.redirect('/404');
}

// Get related stores from same city
const relatedStores = await getStores({ city: store.city, state: store.state, limit: 4 });
const otherStores = relatedStores.filter((s) => s.id !== store.id).slice(0, 3);

const stateSlug = stateToSlug(store.state);
---

<BaseLayout
  title={`${store.name} - Record Store in ${store.city}, ${store.state}`}
  description={store.description || `${store.name} is an independent record store in ${store.city}, ${store.state}. Find vinyl, browse genres, and discover new music.`}
  type="place"
>
  <div class="container-page py-8 md:py-12">
    <!-- Breadcrumbs -->
    <nav class="mb-6 text-sm">
      <ol class="flex items-center gap-2 text-ink-500">
        <li><a href="/stores" class="hover:text-groove-600">Stores</a></li>
        <li>/</li>
        <li><a href={`/stores/${stateSlug}`} class="hover:text-groove-600">{store.state}</a></li>
        <li>/</li>
        <li class="text-ink-900">{store.name}</li>
      </ol>
    </nav>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Header -->
        <div class="mb-6">
          <div class="flex items-start gap-3 mb-2">
            <h1 class="font-display text-3xl md:text-4xl font-bold text-ink-900">
              {store.name}
            </h1>
            {store.verified && (
              <span class="shrink-0 text-groove-500 mt-2" title="Verified listing">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </span>
            )}
          </div>
          <p class="text-lg text-ink-600">
            {store.city}, {store.state}
          </p>
        </div>

        <!-- Photo Gallery -->
        {store.photo_urls && store.photo_urls.length > 0 && (
          <div class="mb-8">
            <div class="aspect-[16/9] rounded-xl overflow-hidden bg-ink-100">
              <img
                src={store.photo_urls[0]}
                alt={`${store.name} storefront`}
                class="w-full h-full object-cover"
              />
            </div>
            {store.photo_urls.length > 1 && (
              <div class="grid grid-cols-4 gap-2 mt-2">
                {store.photo_urls.slice(1, 5).map((url, i) => (
                  <div class="aspect-square rounded-lg overflow-hidden bg-ink-100">
                    <img
                      src={url}
                      alt={`${store.name} photo ${i + 2}`}
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  </div>
                ))}
              </div>
            )}
          </div>
        )}

        <!-- Description -->
        {(store.description || store.ai_description) && (
          <div class="mb-8">
            <h2 class="font-display text-xl font-semibold text-ink-900 mb-3">About</h2>
            <p class="text-ink-700 leading-relaxed">
              {store.description || store.ai_description}
            </p>
          </div>
        )}

        <!-- Vibe -->
        {store.vibe && (
          <div class="mb-8">
            <h2 class="font-display text-xl font-semibold text-ink-900 mb-3">The Vibe</h2>
            <p class="text-ink-700 leading-relaxed italic">"{store.vibe}"</p>
          </div>
        )}

        <!-- Genres -->
        {store.genres && store.genres.length > 0 && (
          <div class="mb-8">
            <h2 class="font-display text-xl font-semibold text-ink-900 mb-3">Genres</h2>
            <div class="flex flex-wrap gap-2">
              {store.genres.map((genre) => (
                <GenreTag genre={genre} size="md" href={`/stores?genre=${genre}`} />
              ))}
            </div>
          </div>
        )}

        <!-- Features -->
        {store.features && store.features.length > 0 && (
          <div class="mb-8">
            <h2 class="font-display text-xl font-semibold text-ink-900 mb-3">Features</h2>
            <div class="flex flex-wrap gap-2">
              {store.features.map((feature) => (
                <FeatureTag feature={feature} size="md" />
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl border border-ink-200 p-6 sticky top-24">
          <!-- Actions -->
          <div class="flex gap-3 mb-6">
            <a
              href={getDirectionsUrl(store)}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary flex-1 justify-center"
            >
              Get Directions
            </a>
            {store.website && (
              <a
                href={store.website}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-secondary flex-1 justify-center"
              >
                Website
              </a>
            )}
          </div>

          <!-- Contact Info -->
          <div class="space-y-4">
            {store.street_address && (
              <div class="flex gap-3">
                <svg class="w-5 h-5 text-ink-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <a
                    href={getGoogleMapsUrl(store)}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-ink-700 hover:text-groove-600"
                  >
                    {store.street_address}<br />
                    {store.city}, {store.state} {store.postal_code}
                  </a>
                </div>
              </div>
            )}

            {store.phone && (
              <div class="flex gap-3">
                <svg class="w-5 h-5 text-ink-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href={`tel:${store.phone}`} class="text-ink-700 hover:text-groove-600">
                  {formatPhone(store.phone)}
                </a>
              </div>
            )}

            {store.instagram && (
              <div class="flex gap-3">
                <svg class="w-5 h-5 text-ink-400 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                <a
                  href={`https://instagram.com/${store.instagram.replace('@', '')}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-ink-700 hover:text-groove-600"
                >
                  {store.instagram}
                </a>
              </div>
            )}
          </div>

          <!-- Store Details -->
          <div class="mt-6 pt-6 border-t border-ink-200 space-y-3">
            {store.year_opened && (
              <div class="flex justify-between text-sm">
                <span class="text-ink-500">Opened</span>
                <span class="text-ink-700">{store.year_opened}</span>
              </div>
            )}
            {store.owner_name && (
              <div class="flex justify-between text-sm">
                <span class="text-ink-500">Owner</span>
                <span class="text-ink-700">{store.owner_name}</span>
              </div>
            )}
            {store.price_range && (
              <div class="flex justify-between text-sm">
                <span class="text-ink-500">Price Range</span>
                <span class="text-ink-700">{store.price_range}</span>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Related Stores -->
    {otherStores.length > 0 && (
      <div class="mt-12">
        <h2 class="font-display text-xl font-bold text-ink-900 mb-6">
          More stores in {store.city}
        </h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {otherStores.map((related) => (
            <a
              href={`/store/${related.slug}`}
              class="bg-white rounded-lg border border-ink-200 p-4 hover:border-groove-300 hover:shadow-md transition-all"
            >
              <h3 class="font-display font-semibold text-ink-900 mb-1">{related.name}</h3>
              <p class="text-sm text-ink-500">{related.city}, {related.state}</p>
            </a>
          ))}
        </div>
      </div>
    )}
  </div>

  <!-- Schema.org markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "MusicStore",
    "name": store.name,
    "description": store.description || store.ai_description,
    "image": store.photo_urls?.[0],
    "address": {
      "@type": "PostalAddress",
      "streetAddress": store.street_address,
      "addressLocality": store.city,
      "addressRegion": store.state,
      "postalCode": store.postal_code,
      "addressCountry": "US"
    },
    "geo": store.latitude && store.longitude ? {
      "@type": "GeoCoordinates",
      "latitude": store.latitude,
      "longitude": store.longitude
    } : undefined,
    "telephone": store.phone,
    "url": store.website
  })} />
</BaseLayout>
