---
const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/stores', label: 'Browse Stores' },
  { href: '/cities', label: 'City Guides' },
  { href: '/gear', label: 'Gear' },
  { href: '/blog', label: 'Blog' },
];

function isActive(href: string) {
  if (href === '/') return pathname === '/';
  return pathname.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur border-b border-ink-200">
  <div class="container-page">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <svg class="w-8 h-8 text-groove-500" viewBox="0 0 24 24" fill="currentColor">
          <circle cx="12" cy="12" r="10" fill="currentColor" opacity="0.1"/>
          <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5" fill="none"/>
          <circle cx="12" cy="12" r="4" fill="currentColor"/>
          <circle cx="12" cy="12" r="1.5" fill="white"/>
        </svg>
        <span class="font-display font-bold text-xl text-ink-900 group-hover:text-groove-600 transition-colors">
          RecordStores
        </span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'btn-ghost',
              isActive(link.href) && 'bg-ink-100 text-ink-900'
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Search + Submit -->
      <div class="flex items-center gap-3">
        <button
          class="btn-ghost p-2"
          aria-label="Search"
          id="search-trigger"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        <a href="/submit" class="btn-primary hidden sm:inline-flex">
          Add a Store
        </a>
        <!-- Mobile menu button -->
        <button
          class="md:hidden btn-ghost p-2"
          aria-label="Menu"
          id="mobile-menu-trigger"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden hidden border-t border-ink-200 bg-white" id="mobile-menu">
    <nav class="container-page py-4 space-y-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-3 py-2 rounded-lg text-ink-600 hover:bg-ink-100 hover:text-ink-900 transition-colors',
            isActive(link.href) && 'bg-ink-100 text-ink-900'
          ]}
        >
          {link.label}
        </a>
      ))}
      <a
        href="/submit"
        class="block px-3 py-2 mt-2 text-center btn-primary"
      >
        Add a Store
      </a>
    </nav>
  </div>
</header>

<script>
  const trigger = document.getElementById('mobile-menu-trigger');
  const menu = document.getElementById('mobile-menu');

  trigger?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
